using System;
namespace CsExosAlgo1
{
    class ApplicationValAbsolue2 
    {
         static void Main(string[ ] args) 
         {
              double x;
              System.Console.Write("Entrez un nombre x = ");
              x = Double.Parse( System.Console.ReadLine( ) ) ;
              System.Console.WriteLine("|x| = "+ (x < 0 ? -x : x) );
         }
    }
}
